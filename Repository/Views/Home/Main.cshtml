@{
    Layout = null;
}
@using Recaptcha;

<div class="col-lg-8">
<div class="panel panel-default">     
<div class="panel-heading">
<i class="fa fa-book fa-fw" > </i> {{'NEWBOOKS' | translate}}
</div>
<div class="panel-body">

   <div data-ng-repeat ="book in books" class="col-lg-4">
   
    <div class="thumbnail">
        <a id="{{book.id}}"  href="#" class="thumbnail">
         <img data-src="holder.js/300x200" alt="..." src="~/Images/book.png">
        </a> 
        <p>{{book.title}}</p>            
    </div>
  </div>

 </div>
<div class="col-lg-12">
<pagination  total-items="booksSize" max-size="maxSize" items-per-page="itemsPerPage" data-ng-model="currentPage" class="pagination-sm" boundary-links="true" rotate="true" ></pagination>

 </div>
 </div>
</div>