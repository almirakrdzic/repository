@{
    Layout = null;
}

<div class="container">
	<div class="row">
  		<div class="col-sm-10"><h1>{{userDetails.username}}</h1></div>
    	<div class="col-sm-2"><a href="/users" class="pull-right"><img title="profile image" class="img-circle img-responsive" data-ng-src="{{imageSrc}}"/></a></div>
    </div>
    <div class="row">
  		<div class="col-sm-3"><!--left col-->
              
          <ul class="list-group">
            <li class="list-group-item text-muted">Profile</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Joined</strong></span> 2.13.2014</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Last seen</strong></span> Yesterday</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong >Firstname </strong></span> {{userDetails.firstName}}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Lastname </strong></span> {{userDetails.lastName}}</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Email </strong></span> {{userDetails.email}}</li>
          </ul>        
          
          
             
          
        </div><!--/col-3-->
    	<div class="col-sm-9">
          
    <tabset justified="true">
    <tab heading="Home">
        

    </tab>
    <tab heading="Uploaded books" data-ng-click="getUploads()">
       
         <div data-ng-repeat ="book in books" class="col-sm-3 col-md-3">
    <div class="thumbnail">
        <a id="{{book.id}}" data-ng-class="{active : activeViewPath==='/book/details/{{book.id}}'}"  href="#/book/details/{{book.id}}" class="thumbnail">
<img data-src="holder.js/300x200" alt="..." src="~/Images/book.png">
        </a> 
        <h4 style="text-align:center">{{book.title}}</h4>
        <rating ng-model="book.rating" max="10" state-on="'fa fa-star fa-fw'" state-off="'fa fa-star-o fa-fw'" readonly="true"></rating>
          
        <p><a href="#" class="btn btn-primary" role="button"><i class="fa fa-download fa-fw"></i></a></p>
     
    </div>
  </div>
 
    </tab>
    <tab heading="Downloaded books" data-ng-click="getDownloads()">
          <div data-ng-repeat ="book in books" class="col-sm-3 col-md-3">
    <div class="thumbnail">
        <a id="{{book.id}}" data-ng-class="{active : activeViewPath==='/book/details/{{book.id}}'}"  href="#/book/details/{{book.id}}" class="thumbnail">
<img data-src="holder.js/300x200" alt="..." src="~/Images/book.png">
        </a> 
        <h4 style="text-align:center">{{book.title}}</h4>
        <rating ng-model="book.rating" max="10" state-on="'fa fa-star fa-fw'" state-off="'fa fa-star-o fa-fw'" readonly="true"></rating>
          
        <p><a href="#" class="btn btn-primary" role="button"><i class="fa fa-download fa-fw"></i></a></p>
     
    </div>
  </div>

    </tab>
 
               </tabset>

          </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->
