@{
    Layout = null;
}

 <div class="col-lg-3">
     <div class="thumbnail">     
     <img data-src="holder.js/300x200" alt="..." src="~/Images/book.png" class="img-rounded img-responsive" />
     </div>
     <br />
     <a target="_self" href="/api/resource/downloadbook/?id={{book.id}}" download="proposed_file_name.zip">
         <button type="button" class="btn btn-primary btn-lg btn-block"><i class="fa fa-download fa-fw"></i>Download</button>
     </a>
     
     <br />
      <p class="text-muted">{{'Rate' | translate}}<br/>   
     <rating ng-model="Userrate" max="5" state-on="'fa fa-star fa-fw'" state-off="'fa fa-star-o fa-fw'" readonly="false"></rating>
     <div class="form-group"><input type="button" class="btn btn-default" data-ng-click ="rate()" value="Rate" />
         <button class="btn btn-sm btn-danger" data-ng-click="Userrate = 0" data-ng-disabled="isReadonly">{{'clear' | translate}}</button>
     </div>                            
     
      </p>
 </div>  

<div class="col-lg-6" id="g/ć">     
    <h3>{{book.title}}</h3>         
         <br />        
     <rating data-ng-model="book.rating" max="5" state-on="'fa fa-star fa-fw'" state-off="'fa fa-star-o fa-fw'" readonly="true"></rating>
     <p>{{'rated' | translate}}{{book.people}}</p> 
    <p style="text-align: right">{{'Dodano' | translate}}
             {{book.addedBy.firstName + ' ' + book.addedBy.lastName}}  
    </p>
    <br />
    <hr /> 
  
    ISBN: <b>{{book.isbn}} </b>  | 
     {{'edition' | translate}}<b>{{book.edition}}</b>
 
    <br /><br />
    
        <b>{{'about' | translate}}</b>
        <p>{{book.description}}</p>
        
    <hr />  
    
    <div class="comments row">
                        <div class="comment row">                           
                            <div class="col-md-11">
                                <form data-ng-submit="kreirajKomentar()" enctype = "multipart/form-data">
                                    <div class="form-group">
                                        <label class="sr-only" for="comment">{{'comment' | translate}}</label>
                                        <textarea class="form-control" data-ng-model="tekstKomentara" rows="3" id="comment" placeholder="Comment..."></textarea>
                                    </div>
                                    <button data-ng-click="ok()" class="btn btn-sm" >{{'comm' | translate}}</button>
                                </form>
                            </div>
                        </div>
                        <hr class="">
                        <div data-ng-repeat="comment in comments" class="comment row">
                            <div class="col-sm-1">
                                <img data-ng-src="{{imageData[comment.idUser.id]}}" width="50" height="50">
                            </div>
                            <div class="col-md-11">
                                <div class=""> <a href="#" class=""><span class="">{{comment.idUser.firstName}} {{comment.idUser.lastName}}<span class=""></span></span></a>                                   
                                        <p class="">{{ comment.text }}</p>
                                </div><br />
                            </div>
                        </div>



 </div>
    </div>



